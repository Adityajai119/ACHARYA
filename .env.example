# ACHARYA Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/acharya

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here

# Server Configuration (optional)
HOST=0.0.0.0
PORT=8000

# How to get these values:
# 1. MONGODB_URL: Create account at mongodb.com and get connection string
# 2. GEMINI_API_KEY: Get from https://makersuite.google.com/app/apikey
# 3. JWT_SECRET_KEY: Generate with: python -c "import secrets; print(secrets.token_hex(32))"
